.row
	.large-6.columns
		UUID
	.large-6.columns
		= @end_entity.uuid
	
.row
	.large-6.columns
		Identifier
	.large-6.columns
		= @end_entity.did
		
.row
	.large-6.columns
		Status
	.large-6.columns
		- if @end_entity.status == 0
			New
		- elsif @end_entity.status == 1
			Pending
		- elsif @end_entity.status == 2
			Enrolled
		- elsif @end_entity.status == 4
			Revoked

- if @certificates
	
	.row
		.large-12.columns
			
			- @certificates.each do | certificate |
				
				.row
					.large-6.columns
			
						- cert = OpenSSL::X509::Certificate.new(certificate.certificate)
						= cert.serial.to_s(16)
						= "Current cert expires in #{ days_left(cert.not_after) }"

					.large-6.columns
					
						= "#{link_to 'pem', admin_end_entity_cert_pem_path(@end_entity)} / #{link_to 'der', admin_end_entity_cert_der_path(@end_entity)}".html_safe
						|
						= link_to 'renew', ''
						|
						= link_to 'revoke', admin_end_entity_certificate_revoke_path(@end_entity, certificate), method: :post

	
- else	

	= form_tag admin_end_entity_enrol_path(@end_entity) do 
		.row
			.large-6.columns
				%label.inline
					CSR
			.large-6.columns
				= text_area_tag 'csr'
		.row
			.large-6.columns
			.large-6.columns
				= submit_tag 'enrol', class: 'button'		


	= link_to 'create a new certificate', new_admin_end_entity_certificate_path(@end_entity)	
	
= link_to 'back to end entities', admin_end_entities_path