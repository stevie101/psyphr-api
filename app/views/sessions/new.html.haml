.row
	.large-12.columns
		%h1 Login

= form_tag sessions_path, :html => { :class => 'form-horizontal' } do

	.row
		.large-6.columns
			= label_tag :user, :email, {:class => 'control-label'}
		.large-6.columns
			= text_field_tag :email, params[:email], {:class => 'text_field'}

	.row
		.large-6.columns
			= label_tag :user, :password, :class => 'control-label'
		.large-6.columns
			= password_field_tag :password, nil, {:class => 'text_field'}
			
	.row
		.large-6.columns
			= submit_tag "Login", {:class => 'button'}
		.large-6.columns
			&nbsp;